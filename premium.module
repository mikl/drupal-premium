  );
  return $operations;
}

/**
 * Callback for hook_node_operations()
 */
function _premium_node_operations_premium($nids, $premium = 0) {
  foreach ($nids as $nid) {
    $node = node_load($nid);
    _premium_set_premium($node, $premium);
  }
}

